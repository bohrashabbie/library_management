<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Library Management Category -->
    <record id="library_management_category" model="ir.module.category">
        <field name="name">Library Management</field>
        <field name="description">Access and manage library-related modules, books, and users</field>
        <field name="sequence">10</field>
    </record>

    <!-- Librarian Group -->
    <record id="library_librarian_group" model="res.groups">
        <field name="name">Librarian</field>
        <field name="category_id" ref="library_management_category"/>
    </record>

    <!-- Library Assistant Group -->
    <record id="library_assistant_group" model="res.groups">
        <field name="name">Library Assistant</field>
        <field name="category_id" ref="library_management_category"/>
    </record>

    <!-- Library Member Group -->
    <record id="library_member_group" model="res.groups">
        <field name="name">Library Member</field>
        <field name="category_id" ref="library_management_category"/>
    </record>

    <!-- Administrator Group -->
    <record id="library_admin_group" model="res.groups">
        <field name="name">Library Administrator</field>
        <field name="category_id" ref="library_management_category"/>
    </record>
</odoo>
